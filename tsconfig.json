{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src"
    },
    "exclude": [
        "**/node_modules/**",
        "../../node_modules/**",
        "**/dist"
    ],
    "include": [
        "src/**/*.d.ts",
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/*.vue",
        "src/**/*.vue"
    ]
}
